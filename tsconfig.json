{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"outDir": "./dist",
		"baseUrl": "./src",
		"rootDir": "./src",
		"strict": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@Entities/*": ["./entity/*"],
			"@Resolvers/*": ["./resolvers/*"],
			"@Config": ["./config/config"]
		}
	},
	"include": ["**/*"]
}
